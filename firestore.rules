rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // User Preferences Subcollection
      match /preferences/{preferenceId} {
        allow read, write: if isOwner(userId);
      }

      // User Inbox Subcollection
      match /inbox/{messageId} {
        allow read, write: if isOwner(userId);
      }

      // User Daily Snapshots (Briefing)
      match /daily/{date} {
        allow read, write: if isOwner(userId);
      }
    }

    // Tasks Collection
    match /tasks/{taskId} {
      // Allow reading/writing if the resource belongs to the user
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow creating if the access is authenticated and the new resource belongs to the user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Quotes Collection (Shared Library)
    // Public read access allowed for universal inspiration
    match /quotes/{quoteId} {
      allow read: if true;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Metadata Collection (System Config)
    // Public read access allowed for global system settings
    match /metadata/{documentId} {
      allow read: if true;
      allow write: if false; // Internal/Admin only
    }

    // Notes Collection
    match /notes/{noteId} {
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Dates Collection
    match /dates/{dateId} {
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || resource.data.isPublic == true;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Activities Log
    match /activities/{activityId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Subscriptions Collection
    match /subscriptions/{subscriptionId} {
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Assets Collection
    match /assets/{assetId} {
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Strategy / OKRs Collection
    match /okrs/{okrId} {
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Ledger / Transactions Collection
    match /transactions/{transactionId} {
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
